root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# exclude java and js until smart_tabs option is missiong
[!*.{java,js}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[*.{json,yml}]
indent_size = 2
indent_style = space
